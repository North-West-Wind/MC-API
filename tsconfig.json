{
    "compileOnSave": true,
    "compilerOptions": {
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext",
            "ESNext.BigInt",
            "ESNext.Intl",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Promise",
            "ESNext.String",
            "ESNext.Symbol",
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitThis": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "lib",
        "plugins": [
            {
                "name": "typescript-eslint-language-service"
            }
        ],
        "removeComments": true,
        "strict": true,
        "target": "ESNext",
        "useDefineForClassFields": true
    },
    "include": [
        "src/**/*"
    ]
}
